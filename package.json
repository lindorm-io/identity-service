{
  "name": "@lindorm-io/identity-service",
  "description": "Identity Service",
  "version": "0.1.0",
  "license": "ISC",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:lindorm-io/identity-service.git"
  },
  "bugs": {
    "url": "https://github.com/lindorm-io/identity-service/issues"
  },
  "author": "Jonn Nilsson",
  "maintainers": [
    "jonn@jonn.nu"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "concurrently 'rimraf coverage' 'rimraf dist'",
    "coverage": "jest --coverage --forceExit",
    "lint": "eslint --ext .ts ./src/",
    "lint:fix": "eslint --ext .ts ./src/ --fix",
    "start": "node dist/server",
    "start:dev": "nodemon",
    "start:docker": "cd docker && docker-compose up",
    "test": "jest --config jest.config.js --forceExit --",
    "test:all": "npm run test && npm run test:integration",
    "test:clear": "jest --clearCache",
    "test:integration": "jest --config jest.integration.config.js --forceExit --",
    "test:integration:watch": "jest --config jest.integration.config.js --watch --",
    "test:watch": "jest --config jest.config.js --watch --",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "update": "ncu -u && npm install",
    "validate": "npm run test:clear && npm run lint && npm run typecheck && npm run test"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@lindorm-io/core": "^0.1.8",
    "@lindorm-io/jwt": "^0.1.5",
    "@lindorm-io/key-pair": "^0.1.2",
    "@lindorm-io/koa": "^0.1.5",
    "@lindorm-io/koa-basic-auth": "^0.1.1",
    "@lindorm-io/koa-jwt": "^0.1.7",
    "@lindorm-io/koa-mongo": "^0.2.5",
    "@lindorm-io/mongo": "^0.2.7",
    "@lindorm-io/winston": "^0.1.2",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.21",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/lodash": "^4.14.168",
    "@types/mongodb": "^3.6.10",
    "@types/node": "^14.14.35",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.22.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.5.4",
    "mockdate": "^3.0.4",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
